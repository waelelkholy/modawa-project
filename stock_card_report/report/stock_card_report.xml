<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="stock_card_report_template">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.internal_layout">
					<div class="page">
						<style>
							.header_table{
								width:100%;
							}
							.header_table th{
								padding:5px;
								text-align:center;
								border:1px solid black;
								background:#c8cace;
							}
							.header_table td{
								padding:5px;
								text-align:center;
								border:1px solid black;
							}
							.my_table{
								width:100%;
								font-size:15px;
							}
							.my_table th{
								padding:5px;
								border:1px solid #000;
								background:#d6d6d6;
								
							}
							.my_table td{
								padding:5px;
								border-bottom:1px solid #efefef;
							}
						</style>
						<center>
							<h3>STOCK CARD REPORT</h3>
						</center>
						<br />
						<div class="col-xs-12">
							<table class="header_table">
								<thead>
									<tr>
										<th width="33%">Location ppppp</th>
										<th width="33%">Date</th>
										<th width="34%">Generated By</th>
									</tr>
								</thead>
								<tbody class="sale_tbody">
									<tr>
										<td>
											<span t-esc="o.location_id.name" />
										</td>
										<td>
											<span t-esc="o.get_date().get('start_date')" />
											To
											<span t-esc="o.get_date().get('end_date')" />
										</td>
										<td>
											<span t-esc="user.name" />
										</td>
									</tr>
								</tbody>
							</table>
						</div>
						<br />
						<div class="row mt32 mb32" />
						<div class="row">
							<div class="col-xs-12">
								<table class="my_table">
									<thead>
										<tr>
											<th width="14%">Date</th>
											<th width="14%">Origin</th>
											<th width="8%" class="text-right">In Quantity</th>
											<th width="8%" class="text-right">Out Quantity</th>
											<th width="8%" class="text-right">Balance</th>
										</tr>
										<tbody class="sale_tbody">
											<t t-set="lines" t-value="o.get_lines()" />
											<t t-foreach="lines" t-as="line">
												<tr>
													<td class="text-left" style="background:#f7f3d4;border-bottom:1px solid black;border-top:1px solid black" colspan="11">
														<span t-esc="line.get('product')" />
													</td>
												</tr>
												<t t-set="t_in_qty" t-value="0" />
												<t t-set="t_out_qty" t-value="0" />
												<t t-set="b_qty" t-value="0" />
												<t t-set="count" t-value="0" />
												<t t-foreach="line.get('values')" t-as="val">
													<t t-if="count == 0">
														<t t-set="open_qty" t-value="o.get_opening_quantity(val.get('product_id'))" />
														<tr>
															<td />
															<td style="border-right:1px solid #efefef">
																<b>Opening Balance</b>
															</td>
															<td style="border-right:1px solid #efefef" />
															<td style="border-right:1px solid #efefef" />
															<td class="text-right" style="border-right:1px solid #efefef">
																<t t-set="b_qty" t-value="open_qty" />
																<b>
																	<span t-esc="'%.2f'%(open_qty)" />
																</b>
															</td>
														</tr>
														<t t-set="count" t-value="1" />
													</t>
													<tr>
														<td>
															<t t-if="val.get('date')" />
														</td>
														<td style="border-right:1px solid #efefef">
															<span t-esc="val.get('origin') or val.get('ref')" />
														</td>
														<td class="text-right" style="border-right:1px solid #efefef">
															<t t-if="val.get('in_qty')">
																<t t-set="t_in_qty" t-value="t_in_qty + val.get('in_qty')" />
																<t t-set="b_qty" t-value="b_qty+ val.get('in_qty')" />
																<span t-esc="'%.2f'%(val.get('in_qty'))" />
															</t>
														</td>
														<td class="text-right" style="border-right:1px solid #efefef">
															<t t-if="val.get('out_qty')" style="border-right:1px solid #efefef">
																<t t-set="t_out_qty" t-value="t_out_qty + val.get('out_qty')" />
																<t t-set="b_qty" t-value="b_qty - val.get('out_qty')" />
																<span t-esc="'%.2f'%(val.get('out_qty'))" />
															</t>
														</td>
														<td class="text-right" style="border-right:1px solid #efefef">
															<span t-esc="'%.2f'%(b_qty)" />
														</td>
													</tr>
												</t>
												<tr>
													<td colspan="2" class="text-right" style="border-right:1px solid #efefef">
														<b>TOTAL</b>
													</td>
													<td class="text-right" style="border-right:1px solid #efefef">
														<t t-if="t_in_qty">
															<b>
																<span t-esc="'%.2f'%(t_in_qty)" />
															</b>
														</t>
													</td>
													<td class="text-right" style="border-right:1px solid #efefef">
														<t t-if="t_out_qty">
															<b>
																<span t-esc="'%.2f'%(t_out_qty)" />
															</b>
														</t>
													</td>
													<td class="text-right" style="border-right:1px solid #efefef">
														<b>
															<span t-esc="'%.2f'%(b_qty)" />
														</b>
													</td>
												</tr>
											</t>
										</tbody>
									</thead>
								</table>
							</div>
						</div>
						<p style="page-break-before:always;" />
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>