<odoo>
    <data>
        <!-- accesstype form view-->
        <record model="ir.ui.view" id="view_id_type_form">
            <field name="name">hr.id.type.form</field>
            <field name="model">hr.id.type</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Access Type" >
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record model="ir.ui.view" id="view_id_type_tree">
            <field name="name">hr.id.type.tree</field>
            <field name="model">hr.id.type</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="emp_id_type_action">
            <field name="name">ID Type</field>
            <field name="res_model">hr.id.type</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="ID Type"
              id="hr_emp_id_menu"
              parent="hr.menu_human_resources_configuration"
              action="emp_id_type_action"
              sequence="15"
        groups="hr.group_hr_manager,hr.group_hr_user"/>

    </data>
</odoo>